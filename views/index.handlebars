<style media="screen">
  form input {
    line-height: 3rem;
    text-align: center;
  }
  img.icon {
    max-height: 5vh;
    max-width: 5vw;
  }
</style>

<div class="container bg-red">
  <div class="row bg-orange">
    <div class="mx-auto col-auto text-center bg-yellow">
      <img src="http://fillmurray.com/200/200">
      <p>Eat at Bob's Burgers!</p>
    </div>
  </div>
  <div class="row justify-content-center bg-green">
    <div class="col bg-blue">
      <form class="row justify-content-center bg-indigo">
        <input type="text" class="col-md-6"></input>
        <button type="submit" class="btn btn-danger col-auto">Order</button>
      </form>
    </div>
  </div>

  <div class="row justify-content-between bg-violet">
    <div class="col bg-bluvlt">
      <div class="row justify-content-center">
        <img class="col-auto icon" src="/assets/images/ordered.png">
        <h4 class="col-auto text-center">
          Ordered
        </h4>
        <img class="col-auto icon" src="/assets/images/ordered.png">
      </div>

      <ul>
        {{#each ordered}}
          <li class="row justify-content-center">
            <p class="col-6 align-self-center mb-0">{{id}} <i>{{burger_name}}</i></p>
            <a href="#" class="col-auto bg-red">
              <img class="icon" src="/assets/images/eatburger2.png">
            </a>
          </li>
        {{else}}
          <p>(None) Try adding an Order!</p>
        {{/each}}
      </ul>
    </div>
    <div class="col bg-orgred">
      <h4 class="text-center">Devoured</h4>
      <ul>
        {{#each devoured}}
          <li>
            <p>{{id}} <i>{{burger_name}}</i></p>
          </li>
        {{else}}
          <p>(None) Eat a juicy Burger!</p>
        {{/each}}
      </ul>
    </div>
  </div>
</div>